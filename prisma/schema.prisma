generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id              String   @id @default(cuid())
  slug            String?  @unique
  name            String
  title           String?
  email           String
  phone           String?
  ext             String?
  credentials     String?
  website         String?
  linkedIn        String?
  description     String?  // Bio/overview for agent landing page
  notableDealsJson String?  // JSON array of deal strings
  headshot        String?
  order           Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  listings  ListingBroker[]
}

model ContactMessage {
  id           String   @id @default(cuid())
  name         String
  email        String
  phone        String?
  service      String?
  message      String
  listingSlug  String?  // Property user was viewing when they clicked "Send a message"
  listingTitle String?  // Property title for display in inbox
  read         Boolean  @default(false)
  createdAt    DateTime @default(now())
}

model FeatureOption {
  id    String @id @default(cuid())
  label String @unique
}

model Listing {
  id              String   @id @default(cuid())
  slug            String   @unique
  title           String
  nickname        String?
  address         String
  city            String
  state           String   @default("OH")
  zipCode         String?
  latitude        Float
  longitude       Float
  listingType     String   // For Sale, For Lease, Sale/Lease
  propertyType    String   // Retail, Industrial, etc.
  landSubcategory String?  // When Land: Retail, Office, Industrial, Specialty, Residential
  squareFeet      Int?
  acreage         Float?
  isMultiTenant   Boolean  @default(false)
  unitCount       Int?
  unitsJson       String?  // JSON: [{ name, squareFeet, acreage? }]
  description     String
  featuresJson    String   // JSON array of feature strings
  heroImage       String?
  galleryImagesJson String? // JSON array of paths
  floorPlan       String?
  sitePlan        String?
  brochure        String?
  youtubeLink     String?
  noi             Float?
  price           Float?
  priceNegotiable Boolean  @default(false)
  leaseType       String?  // NNN, MG, FSG, Modified (for For Lease / Sale/Lease)
  leasePricePerSf  Float?   // $/SF/Y for lease listings
  leaseNnnCharges   Float?   // $/SF for NNN charges (when lease type is NNN)
  capRate         Float?
  occupancy       String?  // Owner User, Investment, Owner User/Investment (For Sale & Sale/Lease only)
  published       Boolean  @default(true)
  featured        Boolean  @default(false)
  status          String   @default("Active")  // Active | Pending | Sold
  transactionOutcome String?  // Sold | Leased - for Sale/Lease, which one; For Sale=Sold, For Lease=Leased
  soldPrice       Float?   // Final sale/lease price when Sold
  soldDate        DateTime? // Closing/lease commencement date
  soldNotes       String?  // Optional transaction details
  financialDocPath String?  // PDF path for Investment properties; requires NDA to view
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  brokers         ListingBroker[]
}

model ListingBroker {
  listingId String
  agentId   String
  listing   Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
  agent     Agent   @relation(fields: [agentId], references: [id], onDelete: Cascade)
  @@id([listingId, agentId])
}

model News {
  id          String     @id @default(cuid())
  slug        String     @unique
  title       String
  excerpt     String?    // Short summary
  content     String     @default("")
  imageUrl    String?
  publishedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  links       NewsLink[]
}

model NewsLink {
  id      String @id @default(cuid())
  newsId  String
  news    News   @relation(fields: [newsId], references: [id], onDelete: Cascade)
  label   String // Site name, e.g. "Columbus Business First"
  url     String
  order   Int    @default(0)
  @@index([newsId])
}

model NdaSubmission {
  id           String   @id @default(cuid())
  listingSlug  String
  listingTitle String
  firstName    String
  lastName     String
  email        String
  phone        String?
  company      String?
  signatureName String
  acknowledgedAt DateTime @default(now())
  status       String   @default("pending")  // pending | approved | rejected
  approvalToken String?  @unique  // Token for approved users to access financials
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model LeaseApplication {
  id                    String   @id @default(cuid())
  listingSlug           String
  listingTitle          String
  firstName              String
  lastName               String
  businessName           String?
  use                    String?   // Intended use of property
  dateOfBirth            String?
  phone                  String?
  email                  String
  ssn                    String?   // Stored for processing; consider encryption in production
  businessPlanPath       String?
  financialsPathsJson    String?   // JSON array of file paths
  creditCheckAcknowledged Boolean @default(false)
  signatureName          String   // Typed name acting as signature
  applicationFeeCents    Int?     // Fee amount in cents (e.g. 5000 = $50)
  stripePaymentIntentId  String?  // Stripe PaymentIntent ID
  paymentStatus          String?  // pending | paid | failed
  received               Boolean  @default(false)  // Marked as received by admin (removes from header counter)
  coApplicantDataJson    String?  // JSON object with co-applicant fields when applicable
  createdAt              DateTime @default(now())
}
